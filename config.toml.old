paginate = 20

pygmentsstyle = "bw"
pygmentscodefences = true
pygmentscodefencesguesssyntax = true

disqusShortname = "ftisiot"
disableComments = true

[params]
  author = "Francesco Tisiot"
  info = "Developer Advocate ad Aiven"
  description = "Francesco Tisiot's personal website"
  keywords = "aiven,kafka,influxdb,elasticsearch,oracle,blog,developer,personal"
  avatarurl = "images/ftisiot.png"
  #gravatar = "john.doe@example.com"

  favicon_32 = "images/ftisiot-32x32.png"
  favicon_16 = "images/ftisiot-16x16.png"

  footercontent = "Written by ftisiot"
  hideFooter = true
  hideCredits = true
  hideCopyright = false
  since = 2019

  enableTwemoji = true

  colorsheme = "auto"
  hidecolorschemetoggle = true

